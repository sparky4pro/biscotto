#scope_private
#import "std/string"

f1 :: fn (list: *string) {
	defer str_append(list, "B");
	str_append(list, "A");
}

f2 :: fn (list: *string) {
	defer str_append(list, "D");
	defer str_append(list, "C");
	defer str_append(list, "B");
	str_append(list, "A");
}

f3 :: fn (list: *string) {
	defer str_append(list, "G");
	defer str_append(list, "F");
	defer str_append(list, "E");
	str_append(list, "A");
	{
		defer str_append(list, "C");
		defer str_append(list, "B");
	}
	str_append(list, "D");
}

f4 :: fn (list: *string) {
	defer str_append(list, "H");
	defer str_append(list, "G");
	defer str_append(list, "F");

	fn (list: *string) {
		defer str_append(list, "B");
		defer str_append(list, "A");
	} (list);
	{
		defer str_append(list, "D");
		defer str_append(list, "C");
	}
	str_append(list, "E");
}

f5 :: fn (list: *string) {
	expr := true;
	defer str_append(list, "B");
	defer str_append(list, "A");
	if expr then return;

	defer str_append(list, "C");
}

f6 :: fn (list: *string) {
	expr := false;
	defer str_append(list, "C");
	defer str_append(list, "B");
	if expr then return;

	defer str_append(list, "A");
}

f7 :: fn (list: *string) {
	expr :: true;
	defer str_append(list, "B");
	defer str_append(list, "A");
	if expr then return;

	str_append(list, "X");
}

f8 :: fn (list: *string) {
	expr :: false;
	defer str_append(list, "C");
	defer str_append(list, "B");
	if expr then return;

	str_append(list, "A");
}

f9 :: fn (list: *string) {
	expr := false;
	defer str_append(list, "C");
	defer str_append(list, "B");
	if expr then return;

	defer str_append(list, "A");
}

f10 :: fn (list: *string) {
	loop i := 0; i < 10; i += 1 {
		defer str_append(list, i);
		defer str_append(list, "A");
	}
}

f11 :: fn (list: *string) s32 {
	defer str_append(list, "B");
	defer str_append(list, "A");
	if true then return 0;

	defer str_append(list, "X");
	return 1;
}

f12 :: fn (list: *string)  {
	loop i := 0; i < 4; i += 1 {
		defer str_append(list, "A");
		continue;
		str_append(list, "X");
	}
	defer str_append(list, "B");
	loop i := 0; i < 4; i += 1 {
		defer str_append(list, "C");
		break;
		str_append(list, "X");
	}
}

f13 :: fn (list: *string) {
	defer str_append(list, "A");
	#if true {
		defer str_append(list, "B");
		defer str_append(list, "C");
	} else {
		defer str_append(list, "D");
		defer str_append(list, "E");
	}
}

f14 :: fn (list: *string) {
	defer str_append(list, "A");
	#if false {
		defer str_append(list, "B");
		defer str_append(list, "C");
	} else {
		defer str_append(list, "D");
		defer str_append(list, "E");
	}
}

defer_test_1 :: fn () #test {
	list: string;
	f1(&list);
	test_eq(list, "AB");
	str_terminate(&list);
}

