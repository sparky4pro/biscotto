#scope_private
#import "std/print"
#import "std/math"
#import "std/string"
#import "std/array"

test_print_int :: fn () #test {
	{
		v : u64 : U64_MAX;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "18446744073709551615");
	}

	{
		v : s64 : S64_MAX;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "9223372036854775807");
	}

	{
		v : s64 : S64_MIN;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "-9223372036854775808");
	}

	{
		v : s32 : S32_MAX;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "2147483647");
	}

	{
		v : s32 : S32_MIN;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "-2147483648");
	}

	{
		v : s16 : S16_MAX;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "32767");
	}

	{
		v : s16 : S16_MIN;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "-32768");
	}

	{
		v :: -0;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "0");
	}

	{
		v : u32 : -10;
		str :: sprint("%", v);
		defer str_terminate(&str);
		test_eq(str, "4294967286");
	}

}

